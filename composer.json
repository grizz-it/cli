{
    "name": "grizz-it/cli",
    "description": "CLI elements for PHP applications.",
    "keywords": ["cli"],
    "type": "library",
    "license": "MIT",
    "prefer-stable": true,
    "minimum-stability": "stable",
    "require": {
        "php": "^8.0",
        "grizz-it/enum": "^1.1",
        "grizz-it/task": "^1.1",
        "grizz-it/validator": "^1.1"
    },
    "authors": [{
        "name": "GrizzIT",
        "homepage": "https://www.grizzit.com/",
        "role": "Developer"
    }],
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "GrizzIt\\Cli\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GrizzIt\\Cli\\Tests\\": "tests/"
        }
    },
    "archive": {
        "exclude": [
            "/examples",
            "/tests",
            "/.gitignore",
            "/.travis.yml",
            "/phpunit.xml",
            "/phpcs.xml",
            "/PULL_REQUEST_TEMPLATE.md",
            "/CODE_OF_CONDUCT.md",
            "/CONTRIBUTING.md"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.5"
    }
}
